# SwiftFormat Configuration for WrestlePick
# Enforces consistent code formatting and SwiftUI best practices

# Version
--swiftversion 5.9

# Formatting options
--indent 4
--tabwidth 4
--maxwidth 120
--wraparguments before-first
--wrapparameters before-first
--wrapcollections before-first
--closingparen balanced
--indentcase false
--indentstrings false
--trimwhitespace always
--commas always
--semicolons never
--operatorfunc spaced
--ranges spaced
--decimalgrouping 3,6
--binarygrouping 4,8
--octalgrouping 4,8
--hexgrouping 4,8
--fractiongrouping enabled
--exponentgrouping enabled
--hexliteralcase uppercase
--exponentcase lowercase
--importgrouping testable-bottom
--stripunusedargs always
--self insert
--selfrequired ["UIViewController", "UIView", "UIResponder", "NSObject"]
--extensionacl on-extension
--patternlet hoist
--nospaceoperators ["...", "..<"]
--ranges spaced
--linebreaks lf
--trimwhitespace always
--insertlines true
--removelines true
--allman false
